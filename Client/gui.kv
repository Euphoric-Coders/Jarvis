#: import FadeTransition kivy.uix.screenmanager.FadeTransition

ScreenManagement:
    transition: FadeTransition()
    VideoScreen:
    MainScreen:
    NameScreen:

<VideoScreen>:
    name: "Video"
    GridLayout:
        cols: 1
        Video:
            source: "Animation.mp4"
            state: "play"
            on_eos: app.root.current = "Main"
        
<MainScreen>:
    name: "Main"
    FloatLayout:

        Image:
            source: "logo.png"
            pos_hint: {"center_x": 0.5, "center_y": 0.55}
   
        Button:
            text: "INITIATE"
            color: 1, 1, 1, 1
            font_size: 30
            size_hint: 0.7, 0.1
            pos_hint: {"center_x": 0.5, "center_y": 0.2}
            on_release: 
                file = open("Main_client.py")
                reed = file.read()
                exec(reed)
                file.close()

        Button:
            text: "SETTINGS"
            color: 1, 1, 1, 1
            font_size: 15
            size_hint: 0.4, 0.1
            pos_hint: {"right": 1, "top":1}
            on_release: app.root.current = "Name"

<NameScreen>:
    name: "Name"
    FloatLayout:
        TextInput:
            id: login
            pos_hint: {"center_x": 0.5, "center_y": 0.5}
            size_hint: 0.7, 0.1
            font_size: 35
        Button:
            text: "ENTER"
            pos_hint: {"center_x": 0.5, "center_y": 0.35}
            size_hint: 0.5, 0.1
            font_size: 30
        Button:
            text: "BACK"
            pos_hint: {"left": 1, "top": 1}
            size_hint: 0.3, 0.1
            font_size: 15
            on_release: app.root.current = "Main"



        



        
    
        

    